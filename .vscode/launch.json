  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug koogo",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/koogo/main.go",
      "args": ["start"]
    },
    {
      "name": "Debug job",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/koogo/main.go",
      // Change args to run the job you want
      "args": [
        "migrate",
        "--migrations-dir",
        "${workspaceFolder}/internal/repo/postgres/migrations"
      ]
    }
  ]
}
